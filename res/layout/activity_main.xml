    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:id="@+id/rcd_tb_title"
        android:layout_marginTop="5dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dedcd2" >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="盘口数"
                android:textSize="20dp"
                android:id="@+id/pankoushu"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/cell" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="时间"
                android:id="@+id/shijian"
                android:textSize="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/cell" />
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="结果"
                android:id="@+id/jieguo"
                android:textSize="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/cell"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="盈亏"
                android:id="@+id/yingkui"
                android:textSize="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/cell"/>
            <TextView
                android:layout_width="850dp"
                android:layout_height="wrap_content"
                android:text="记录"
                android:id="@+id/jilu"
                android:textSize="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/cell"/>
        </TableRow>
    </TableLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/result_scrollview"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rcd_tb_title">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rcd_tb">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#dedcd2"
                android:padding="0dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="0dp"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="0dp"/>
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="0dp"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="0dp"/>
                <TextView
                    android:layout_width="850dp"
                    android:layout_height="0dp"
                    android:id="@+id/stat_width_ref"/>
            </TableRow>
        </TableLayout>
    </ScrollView>

</RelativeLayout>
