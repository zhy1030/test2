                    style="@style/TextViewStyle1"
                    android:id="@+id/tbr1c9"
                    android:text="9" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#dedcd2">
                <TextView
