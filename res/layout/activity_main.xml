                    style="@style/TextViewStyle2"
                    android:id="@+id/tbr3c7"/>
                <TextView
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle2"
                    android:id="@+id/tbr3c8"/>
                <TextView
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle2"
                    android:id="@+id/tbr3c9"/>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#dedcd2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="#dedcd2">
                </TextView>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#dedcd2">
                <TextView
                    android:text="座位编号"
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle1"
                    android:id="@+id/tbr5"/>
                <TextView
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle1"
                    android:id="@+id/tbr5c1"
                    android:text="10" />
                <TextView
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle1"
                    android:id="@+id/tbr5c2"
                    android:text="11" />
                <TextView
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle1"
                    android:id="@+id/tbr5c3"
                    android:text="12" />
                <TextView
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle1"
                    android:id="@+id/tbr5c4"
                    android:text="13" />
                <TextView
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle1"
                    android:id="@+id/tbr5c5"
                    android:text="14" />
                <TextView
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle1"
                    android:id="@+id/tbr5c6"
                    android:text="15" />
                <TextView
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle1"
                    android:id="@+id/tbr5c7"
                    android:text="16" />
                <TextView
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle1"
                    android:id="@+id/tbr5c8"
                    android:text="17" />
                <TextView
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle1"
                    android:id="@+id/tbr5c9"
                    android:text="18" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#dedcd2">
                <TextView
                    android:text="客人姓名"
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle1"
                    android:id="@+id/tbr6" />
                <TextView
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle1"
                    android:id="@+id/tbr6c1" />
                <TextView
