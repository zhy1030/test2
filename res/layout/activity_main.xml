            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#dedcd2" >
                <TextView
                    android:text="下注数量"
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle2"
                    android:id="@+id/tbr7" />
                <TextView
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle2"
                    android:id="@+id/tbr7c1"/>
                <TextView
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle2"
                    android:id="@+id/tbr7c2"/>
                <TextView
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle2"
                    android:id="@+id/tbr7c3"/>
                <TextView
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle2"
                    android:id="@+id/tbr7c4"/>
                <TextView
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle2"
                    android:id="@+id/tbr7c5"/>
                <TextView
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle2"
                    android:id="@+id/tbr7c6"/>
                <TextView
