                    style="@style/TextViewStyle2"
                    android:id="@+id/tbr7c7"/>
                <TextView
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle2"
                    android:id="@+id/tbr7c8"/>
                <TextView
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle2"
                    android:id="@+id/tbr7c9"/>
            </TableRow>

