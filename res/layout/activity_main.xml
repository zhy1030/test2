                <TextView
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle1"
                    android:id="@+id/tbr2c8" />
                <TextView
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle1"
                    android:id="@+id/tbr2c9" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#dedcd2" >
                <TextView
                    android:text="下注数量"
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle2"
                    android:id="@+id/tbr3" />
                <TextView
                    android:background="@drawable/cell"
                    android:id="@+id/tbr3c1"
                    style="@style/TextViewStyle2"/>
                <TextView
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle2"
                    android:id="@+id/tbr3c2"/>
                <TextView
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle2"
                    android:id="@+id/tbr3c3"/>
                <TextView
                    android:background="@drawable/cell"
                    style="@style/TextViewStyle2"
                    android:id="@+id/tbr3c4"/>
                <TextView
